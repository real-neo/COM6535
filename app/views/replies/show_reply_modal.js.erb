let modalPlaceholder = $('#modal_placeholder');

modalPlaceholder.html('');

<%- if @is_post == 1 %>
modalPlaceholder.html('<%=  j render 'reply_modal', is_post: @is_post, post_id: @post_id %>');
<%- else %>
modalPlaceholder.html('<%=  j render 'reply_modal', is_post: @is_post, reply: @reply %>');
<%- end %>

$('#reply_modal').modal('show');