.modal.fade#modal_testing_id{id: "reply_modal","aria-hidden" => "true", "aria-labelledby" => "reply_modal", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header.post_colour
        %h4#myModalLabel.modal-title Reply Testing
        %button.close.black_bg{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body
        = form_for Reply.new, remote: true, method: :post do |f|
          %form
            .form-group
              =f.text_field :comment, class: 'form-control', placeholder: 'Add your reply here ...'
              -if is_post == 0
                =f.hidden_field :post_id, value: reply.post_id
                =f.hidden_field :original_id, value: reply.id
              -else
                =f.hidden_field :post_id, value: post_id
            %button.btn.btn-primary.center-block#submit_modal{:type => "submit"} Submit

