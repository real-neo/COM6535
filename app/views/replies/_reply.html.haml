.panel.panel-default
  .panel-heading
    %h4.no-margin
      = reply.user.decorate.display_avatar(40,40)
      = reply.fullname
      .time-since-posted
        = reply.time_since_posted
  .panel-body
    - if !reply.original.nil?
      = render 'replies/original_reply', reply: reply.original
    = reply.comment
  - if user_signed_in?
    .panel-footer
      = link_to 'Reply', show_reply_modal_reply_path(reply.id, is_post: 0), method: :post, remote: true
