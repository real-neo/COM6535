.modal.fade#post-modal{ 'aria-hidden': 'true', 'aria-labelledby': 'post-modal', role: 'dialog', tabindex: '-1' }
  .modal-dialog
    .modal-content
      .modal-header
        %h4.modal-title
          = fa_icon 'pencil'
          Create a Post
          %button.close{ 'aria-label': 'Close', 'data-dismiss': 'modal', type: 'button' }
            = fa_icon 'times'

      .modal-body
        = simple_form_for(Post.new.decorate, remote: true, method: :post) do |f|
          .form-group
            = f.label 'Forum'
            = f.select :post_type, Post.post_types.keys - ['App'], selected: session[:forum_type], required: true
            = f.input :title, label: 'Title', required: true
            = f.input :description, label: 'Description', required: true, as: :text
          .form-inputs
            = f.button :submit, 'Submit', class: 'btn-primary center-block'
