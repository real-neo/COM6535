- content_for :title, "Exercise Section"



-#picture, name
-# button to reply

-#replys
.container
  .row
    .col-md-10
      .panel.panel-primary
        .panel-heading
          .row
            .col-md-1
              = image_tag user_image(@post.user), height: 60, width: 60, class: 'img-circle'
            .col-md-7
              %h2
                = @post.title


        .panel-body.reply_body_colour
          = @post.description
          %h6.text_lightgrey{style: 'fload: right'}
            = @post.created_at.strftime("Posted at %H:%M %F")

.row
  .col-md-4
  .col-md-3
    -if user_signed_in?
      %a.btn.btn-danger.btn-lg.btn-block.fill_container{"data-target" => "#basicModal", "data-toggle" => "modal", href: "#"}
        Reply
    -else
      %a#show-login-message.btn.btn-danger.btn-lg.btn-block.fill_container{href: "#"}
        Reply


#basicModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "basicModal", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header.post_colour
        %h4#myModalLabel.modal-title Reply
        %button.close.black_bg{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body

        = form_for @reply, remote: true, method: :post do |f|
          %form
            .form-group
              =f.text_field :comment, class: 'form-control', placeholder: 'Add your reply here ...'
              =f.hidden_field :post_id, value: @post.id

            %button.btn.btn-primary.center-block{:type => "submit"} Submit
%br
#replies_array.container
  - if @replies.blank?
    = no_record_tr(5)
  - else
    = render @replies

:coffee
  $ ->
    $('#show-login-message').on 'click', ->
      $.flashAlert('Log in to be able to reply', 'alert-success')