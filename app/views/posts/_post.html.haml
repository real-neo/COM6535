.panel.panel-default
  .panel-heading
    %h4.no-margin
      = post.user.decorate.display_avatar(40,40)
      = post.title
      .time-since-posted
        = post.time_since_posted
  .panel-body
    .row
      .col-sm-9
        %p
          = post.description
      .col-sm-3
        %button.btn.btn-danger.float-right
          #{ post.replies.count } comments
    .row
      .col-md-2
        = link_to post_path(post) do
          = fa_icon 'eye', class: 'text_lightgrey', text: 'View'
