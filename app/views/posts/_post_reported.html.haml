
.panel.panel-default
  .panel-heading.original-reply
    %h5.no-margin
      = post.user.decorate.display_avatar(40,40)
      = post.user.username + ':  ' + post.title
      .time-since-posted
        = post.time_since_posted
  .panel-body.original-reply
    .row
      .col-sm-9
        %p
          = post.description
      .col-sm-3
        %h6.text-lightgrey#likes_block
          = post.decorate.display_like_count
        %a{href: post_path(post)}
          %button.btn.float-right{class: "#{post.post_type == 'Exercise' ? 'btn-danger' : 'btn-success'}"}
            #{ post.replies.count } comments
      .col-md-4
        = link_to 'View', post_path(post), class: 'fa fa-eye'
        = post.decorate.display_delete_link
