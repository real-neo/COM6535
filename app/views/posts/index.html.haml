#basicModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "basicModal", role: "dialog", tabindex: "-1"}
  .modal-dialog
    .modal-content
      .modal-header.post_colour
        %h4#myModalLabel.modal-title Create a Post
        %button.close.black_bg{"aria-label" => "Close", "data-dismiss" => "modal", type: "button"}
          %span{"aria-hidden" => "true"} Ã—
      .modal-body

        = form_for(@post, remote: true, method: :post) do |f|
          %form
            .form-group
              %label{:for => "title"} *Title
              =f.text_field :title, class: 'form-control'
            .form-group
              %label{:for => "description"} *Description
              =f.text_area :description, class: 'form-control'
            %button.btn.btn-primary.center-block{:type => "submit"} Submit


#posts_array.container
  - if @posts.blank?
    = no_record_tr(5)
  - else
    = render @posts

