.panel.panel-default
  .panel-heading
    %h4.no-margin
      = report.user.decorate.display_avatar(40,40)
      = report.user.username
      .time-since-posted
        = report.time_since_posted
  .panel-body
    = render 'posts/post_reported', post: report.post
    = report.reason
  .panel-footer
    - unless defined?(closed)
      = link_to fa_icon('check', text: 'Mark as done'), done_report_path(report), method: :post, data: { confirm: 'Are you sure?' }
      &nbsp;&nbsp;&nbsp;
    = link_to fa_icon('trash', text: 'Delete report'), report, method: :delete, data: { confirm: 'Are you sure?' }