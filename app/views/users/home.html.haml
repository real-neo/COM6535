- content_for :title, 'Home Page'

.row
  .col-sm-1.hidden-xs
  .col-sm-10.col-xs-12
    %h2
      = @user.display_avatar(100,100)
      Hi, #{ @user.firstname }

.row
  .col-sm-1
  .col-sm-10
    %h3 Your Posts
    %br
    = will_paginate @posts, param_name: 'post_page'
    = render @posts
    = will_paginate @posts, param_name: 'post_page'

.row
  .col-sm-1
  .col-sm-10
    %h3 Your Replies
    %br
    = will_paginate @replies, param_name: 'reply_page'
    = render @replies
    = will_paginate @replies, param_name: 'reply_page'
